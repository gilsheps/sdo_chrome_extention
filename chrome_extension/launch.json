{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome with Extension",
        "runtimeArgs": [
          "--disable-extensions-except=${workspaceFolder}",
          "--load-extension=${workspaceFolder}"
        ],
        "webRoot": "${workspaceFolder}",
        "url": "chrome://extensions/"
      }
    ]
  }
  